{
  "name": "mdx-to-md",
  "type": "module",
  "version": "0.5.1",
  "description": "Convert MDX to Markdown.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/souporserious/mdx-to-md.git"
  },
  "keywords": [
    "markdown",
    "md",
    "mdx",
    "jsx"
  ],
  "author": "Travis Arnold",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mdx-to-md": "dist/cli.js"
  },
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build": "tsc && chmod +x dist/cli.js",
    "build:readme": "node dist/cli.js src/README.mdx",
    "postbuild": "pnpm build:readme",
    "prepublishOnly": "npm run build",
    "dev": "pnpm build --watch --sourcemap",
    "dev:readme": "pnpm build:readme --watch",
    "test": "uvu -r esbuild-register tests"
  },
  "dependencies": {
    "@mdx-js/mdx": "^3.1.0",
    "args-flags": "^1.1.1",
    "chokidar": "^4.0.3",
    "mdx-bundler": "^10.1.1",
    "node-html-markdown": "^1.3.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.1",
    "esbuild-register": "^3.6.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "turbo": "2.5.0",
    "typescript": "^5.8.3",
    "uvu": "^0.5.6"
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 100,
    "semi": false,
    "trailingComma": "es5"
  }
}
